@model Zapatilla


@section Scripts {
    <script>
        $(document).ready(function(){
            // Se definen las variables usando valores pasados desde el controlador.
            var idProducto = '@Model.IdProducto';
            var posicion = parseInt('@(ViewData["posicion"] ?? "1")'); // posición inicial, default a 1
            var numReg = parseInt('@(ViewData["ultimo"] ?? "1")');     // total de registros

            // Función para cargar el partial view con la posición deseada
            function loadPartial(pos) {
                // Actualizamos la variable de posición
                posicion = pos;
                // Construimos la URL de forma dinámica
                var url = '@Url.Action("_PartialImagenes", "Zapatillas")' + '?id=' + idProducto + '&posicion=' + pos;
                $("#container").load(url);
            }

            // Cargamos inicialmente el partial view con la posición actual
            loadPartial(posicion);

            // Al pulsar "Primero", se carga la posición 1
            $(document).on("click", "#btnprimero", function(){
                loadPartial(1);
            });

            // Al pulsar "Anterior", se calcula la posición anterior
            $(document).on("click", "#btnanterior", function(){
                var anterior = posicion - 1;
                if(anterior < 1){
                    anterior = 1;
                }
                loadPartial(anterior);
            });

            // Al pulsar "Siguiente", se calcula la posición siguiente
            $(document).on("click", "#btnsiguiente", function(){
                var siguiente = posicion + 1;
                if(siguiente > numReg){
                    siguiente = numReg;
                }
                loadPartial(siguiente);
            });

            // Al pulsar "Último", se carga la última posición
            $(document).on("click", "#btnultimo", function(){
                loadPartial(numReg);
            });
        });
    </script>
}


<h1>Detalle @Model.Nombre</h1>

<div class="card" style="width: 30rem;">
    <div class="card-header">
        @Model.Nombre - Posición @ViewData["posicion"]
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Descripcion</li>
        <li class="list-group-item">@Model.Precio</li>
    </ul>
    <div id="container"></div>
</div>
