@model Zapatilla

<h1>Detalle @Model.Nombre</h1>

<div class="card" style="width: 30rem;">
    <div class="card-header">
        @Model.Nombre
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Descripcion</li>
        <li class="list-group-item">@Model.Precio</li>
        <li class="list-group-item"><a asp-controller="Zapatillas" asp-action="ImagenesZapatilla" asp-route-id="@Model.IdProducto" class="btn btn-info">Imagenes del producto</a></li>
    </ul>
</div>